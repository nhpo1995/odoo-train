<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- VIEWS -->
    <!-- Tree -->
    <record id="task_tag_view_tree" model="ir.ui.view">
        <field name="name">task.tag.view.tree</field>
        <field name="model">task.tag</field>
        <field name="arch" type="xml">
            <tree string="">
                <field name="name" />
                <field name="color" widget="color_picker" readonly="1"/>
            </tree>
        </field>
    </record>

    <!-- Form -->
     <record id="task_tag_view_form" model="ir.ui.view">
        <field name="name">task.tag.view.form</field>
        <field name="model">task.tag</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="color" 
                                widget="color_picker"/>  
                    </group>
                </sheet>
            </form>
        </field>
     </record>

    <!-- ACITON -->
    <record id="action_task_tag" model="ir.actions.act_window">
        <field name="name">Action Name</field>
        <field name="res_model">task.tag</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>
    <!-- MENU -->
    <menuitem
        id="menu_task_tag"
        name="Tags"
        parent="menu_task_root"
        action="action_task_tag"
        sequence="10"/>
</odoo>
