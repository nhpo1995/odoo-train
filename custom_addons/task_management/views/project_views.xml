<odoo>
    <!-- Form view -->
    <record id="view_task_project_form" model="ir.ui.view">
        <field name="name">task.project.form</field>
        <field name="model">task.project</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <field name="image" widget="image" class="oe_avatar"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Project Name..."/>
                        </h1>
                    </div>
                    <group>
                        <field name="description" placeholder="Project description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

     <!-- Tree View -->
    <record id="view_task_project_tree" model="ir.ui.view">
        <field name="name">task.project.tree</field>
        <field name="model">task.project</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="view_project_kanban" model="ir.ui.view">
        <field name="name">task.project.kanban</field>
        <field name="model">task.project</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="id"/>
                <field name="name"/>
                <field name="description"/>
                <field name="image"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click o_kanban_record" style="border-radius:5px;">
                            <!-- Cover Image on TOP -->
                            <div style="width: 100%; height: 180px; overflow: hidden; background-color: #f0f0f0;">
                                <t t-if="record.image.raw_value">
                                    <img t-att-src="kanban_image('task.project', 'image', record.id.raw_value)" 
                                         style="width: 100%; height: 180px; object-fit: cover; object-position: center;"
                                         alt="Project Image"/>
                                </t>
                                <t t-else="">
                                    <div class="d-flex align-items-center justify-content-center text-muted" style="width: 100%; height: 100%;">
                                        <span class="fa fa-image fa-3x" title="Project Cover" aria-label="Project Cover"/>
                                    </div>
                                </t>
                            </div>
                            <!-- Body below -->
                            <div class="oe_kanban_details p-2" style="padding-top: 16px;">
                                <strong class="o_kanban_record_title d-block mb-2">
                                    <field name="name"/>
                                </strong>
                                <div class="text-muted small o_text_overflow">
                                    <field name="description"/>
                                </div>
                            </div>
                            <div class="oe_kanban_record_bottom mt-2">
                                <span class="badge badge-pill">
                                    Task: <field name="task_count"/>
                                </span>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Action -->
    <record id="action_task_project" model="ir.actions.act_window">
        <field name="name">Project</field>
        <field name="res_model">task.project</field>
        <field name="view_mode">tree,kanban,form</field>
    </record>

    <!-- Menus -->
     <menuitem id="menu_task_project"
                name="Projects"
                parent="menu_task_root"
                action="action_task_project"
                sequence="5"/>
</odoo>